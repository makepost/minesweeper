{
  "name": "minesweeper",
  "version": "0.0.0",
  "description": "Coords in text input open cells on 10x10 minefield",
  "private": true,
  "homepage": "https://makepost.github.io/minesweeper",
  "repository": "https://github.com/makepost/minesweeper",
  "author": "makepost",
  "license": "MIT",
  "scripts": {
    "build": "inferno-scripts build",
    "format": "tsc && tslint --fix 'src/*.js' && stylelint --fix 'src/*.css'",
    "start": "inferno-scripts start",
    "test": "tsc && tslint 'src/*.js' && stylelint 'src/*.css'"
  },
  "dependencies": {
    "inferno": "^5.6.1",
    "inferno-scripts": "^6.3.2",
    "refstore": "^1.1.0"
  },
  "devDependencies": {
    "pre-commit": "^1.2.2",
    "prettier": "^1.14.3",
    "stylelint": "^9.6.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-order": "^1.0.0",
    "tslint": "~5.3.2",
    "tslint-config-prettier": "^1.15.0",
    "tslint-plugin-prettier": "^2.0.0",
    "typescript": "^3.1.2"
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "plugins": [
      "stylelint-order"
    ],
    "rules": {
      "order/properties-alphabetical-order": true
    }
  }
}
